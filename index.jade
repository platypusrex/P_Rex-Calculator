doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE-edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        title P_Rex Weather
        link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css", rel="stylesheet", type="text/css")
        link(href="https://fonts.googleapis.com/css?family=Lekton", rel="stylesheet", type="text/css")
        link(href="https://fonts.googleapis.com/css?family=Prosto+One", rel="stylesheet", type="text/css")
        link(href="https://fonts.googleapis.com/css?family=Monoton", rel="stylesheet", type="text/css")
        link(href="css/style.css", rel="stylesheet")
    body(ng-app='CalculatorApp')
        div.container.text-center
            h1.title P_Rex Calculator
        div.app-container
            div.row
                div.col-xs-4
                    div.calc-container(ng-controller='CalcController')
                        div.row
                            div.col-xs-10.col-xs-offset-1
                                div.calc-name.text-center
                                    p casio
                                        span  p_rex calculator
                                    div.row
                                        div.col-xs-4.col-xs-offset-4.solar.text-left
                                            span |
                                            span |
                                            span |
                                div.screen.text-right
                                    h1 {{screen}}
                                div.calc-btns
                                    div.row
                                        div.col-xs-3
                                            div.ac.text-center(ng-click='clearScreen(1)') AC
                                        div.col-xs-3
                                            div.ce.text-center(ng-click='clearScreen(2)') CE
                                        div.col-xs-3
                                            div.modulus.text-center(ng-click='operation(5)') &#37;
                                        div.col-xs-3
                                            div.divide.text-center(ng-click='operation(4)') &#47;
                                    div.row
                                        div.col-xs-3
                                            div.seven.text-center(ng-click='numbers(7)') &#55;
                                        div.col-xs-3
                                            div.eight.text-center(ng-click='numbers(8)') &#56;
                                        div.col-xs-3
                                            div.nine.text-center(ng-click='numbers(9)') &#57;
                                        div.col-xs-3
                                            div.multiply.text-center(ng-click='operation(3)') &#120;
                                    div.row
                                        div.col-xs-3
                                            div.four.text-center(ng-click='numbers(4)') &#52;
                                        div.col-xs-3
                                            div.five.text-center(ng-click='numbers(5)') &#53;
                                        div.col-xs-3
                                            div.six.text-center(ng-click='numbers(6)') &#54;
                                        div.col-xs-3.text-center
                                            div.subtract.text-center(ng-click='operation(2)') &#45;
                                    div.row
                                        div.col-xs-3
                                            div.one.text-center(ng-click='numbers(1)') &#49;
                                        div.col-xs-3
                                            div.two.text-center(ng-click='numbers(2)') &#50;
                                        div.col-xs-3
                                            div.three.text-center(ng-click='numbers(3)') &#51;
                                        div.col-xs-3
                                            div.add.text-center(ng-click='operation(1)') &#43;
                                    div.row
                                        div.col-xs-3
                                            div.zero.text-center(ng-click='numbers(0)') &#48;
                                        div.col-xs-3
                                            div.decimal.text-center(ng-click='decimal()') &#46;
                                        div.col-xs-3
                                            div.equal.text-center(ng-click='equal()') &#61;
        script(src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.14/angular.min.js", type='text/javascript')
        script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js', type='text/javascript')
        script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js', type='text/javascript')
        script(src='js/calculator.js', type='text/javascript')
        script(src='js/calculatorCtrl.js', type='text/javascript')